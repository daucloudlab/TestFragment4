<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/activity_main_background">


    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="kz.kaznitu.lessons.FragmentA"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fragmentA"
        tools:layout="@layout/fragment_a"
        android:layout_weight="1"/>

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="kz.kaznitu.lessons.FragmentB"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/fragment"
        android:layout_toEndOf="@+id/fragment"

        android:id="@+id/fragmentB"
        tools:layout="@layout/fragment_b"
        android:layout_weight="1"/>
</LinearLayout>